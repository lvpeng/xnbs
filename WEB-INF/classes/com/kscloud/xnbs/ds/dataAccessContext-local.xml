                <property name="sqlMapClient" ref="sqlMapClient"/>
        </bean>
        <bean id="XnbsTabRequestDAO" class="com.kscloud.xnbs.ds.dao.XnbsTabRequestDAOImpl">
                <property name="sqlMapClient" ref="sqlMapClient"/>
        </bean>
        <bean id="XnbsTabTaskListDAO" class="com.kscloud.xnbs.ds.dao.XnbsTabTaskListDAOImpl">
